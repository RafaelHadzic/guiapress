<%- include ('../../partials/header') -%>
<%- include ('../../partials/navbar') -%>

<div class="container">
    <hr>
    <h2>Artigos</h2>
    <a href="/admin/articles/new">
        <button class="btn btn-dark">Cadastrar Artigo</button>
    </a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach((article) => { %>
                <tr>
                    <th><%= article.id %> </th>
                    <th><%= article.title %> </th>
                    <th><%= article.slug %> </th>
                    <th><%= article.category.title %> </th>
                    <th>
                        <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="confirmarDelecao(event, this)">
                            <input type="hidden" name="id" value="<%= article.id %>">
                            <button class="btn btn-danger">Excluir</button>
                        </form>
                    </th>
                </tr>
            <% }) %> 
        </tbody>
    </table>
</div>
<%- include ('../../partials/footer') -%>

<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm("Tem certeza que deseja excluir esse artigo?")
        if (decision){
            form.submit()
        }
    }
</script>