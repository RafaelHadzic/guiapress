<%- include ('../../partials/header') -%>
    <%- include ('../../partials/homenavbar') %>

        <body>
            <br>
            <div class="container">
                
                <% result.articles.rows.forEach((article)=> { %>
                    <div class="card">
                        <div class="card-header">
                            <h4>
                                <%= article.title %>
                            </h4>
                        </div>
                        <div class="card-body">
                            <a href="/<%= article.slug %>" class="btn btn-success">ler artigo completo</a>
                        </div>
                    </div>
                    <hr>
                    <% }) %>
                    <div class="row">
                        <div class="col col-12">
                            <% if(result.page > 2) {%> 
                                <a style="float: left;" href="/articles/page/<%= result.page - 1 %>"> <<< Previous</a>
                            <% } else if (result.page == 2) {%>
                                <a style="float: left;" href="/"> <<< Previous</a>
                            <% } %>
                            <% if(result.next) {%> 
                                <a style="float: right;" href="/articles/page/<%= result.page + 1 %>">Next >>></a>
                            <% } %> 
                        </div>
                        <br>
                    </div>
                    <br>
            </div>
        </body>

        <%- include ('../../partials/footer') -%>